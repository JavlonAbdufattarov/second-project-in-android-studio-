<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/custom_view"
    tools:ignore="ExtraText">
    <!-- Черный квадрат -->
    <View
        android:id="@+id/blackSquare"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#000000"
        android:layout_margin="16dp"
        android:layout_alignParentTop="true"
        />

    <!-- Верхняя строка текста -->
    <TextView
        android:id="@+id/topText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Верхняя строка"
        android:textColor="@android:color/darker_gray"
        android:lines="1"
        android:ellipsize="end"
        android:layout_margin="16dp"
        android:layout_toRightOf="@id/blackSquare"
        android:layout_alignTop="@id/blackSquare"/>

    <!-- Нижняя строка текста -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нижняя строка"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@android:color/darker_gray"
        android:layout_margin="16dp"
        android:layout_toRightOf="@id/blackSquare"
        android:layout_below="@id/topText"/>
    <View
        android:layout_width="match_parent"
        android:layout_height = "match_parent"
        android:background="@android:color/darker_gray"
        android:layout_margin="16dp"
        android:layout_below="@+id/blackSquare"
        />

</RelativeLayout>